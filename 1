## 3. JavaScriptæ¸¸æˆé€»è¾‘å®ç° (game.js)

### ä»£ç ç»“æ„æ¦‚è§ˆ

```javascript
// ========== å¸¸é‡å®šä¹‰ ==========
const GRID_SIZE = 20;           // ç½‘æ ¼å¤§å°
const CELL_SIZE = 20;           // æ¯æ ¼åƒç´ å¤§å°
const INITIAL_SNAKE_LENGTH = 3; // åˆå§‹è›‡é•¿åº¦

// éš¾åº¦é…ç½®
const DIFFICULTY_SETTINGS = {
    easy: { speed: 200, name: 'ç®€å•' },
    medium: { speed: 150, name: 'ä¸­ç­‰' },
    hard: { speed: 100, name: 'å›°éš¾' }
};

// ========== å…¨å±€å˜é‡ ==========
let canvas, ctx;
let snake, food;
let direction, nextDirection;
let gameInterval;
let score, highScore;
let gameState;  // 'ready', 'playing', 'paused', 'gameover'
let currentDifficulty;

// ========== åˆå§‹åŒ–å‡½æ•° ==========
function init() {
    // è·å–DOMå…ƒç´ 
    canvas = document.getElementById('gameCanvas');
    ctx = canvas.getContext('2d');
    
    // åŠ è½½æœ€é«˜åˆ†
    highScore = parseInt(localStorage.getItem('snakeHighScore')) || 0;
    document.getElementById('high-score').textContent = highScore;
    
    // è®¾ç½®é»˜è®¤éš¾åº¦
    currentDifficulty = 'easy';
    
    // åˆå§‹åŒ–æ¸¸æˆæ•°æ®
    resetGame();
    
    // ç»‘å®šäº‹ä»¶ç›‘å¬å™¨
    setupEventListeners();
    
    // ç»˜åˆ¶åˆå§‹ç”»é¢
    draw();
}

// ========== æ¸¸æˆé‡ç½®å‡½æ•° ==========
function resetGame() {
    // åˆå§‹åŒ–è›‡
    snake = [];
    const startX = Math.floor(GRID_SIZE / 2);
    const startY = Math.floor(GRID_SIZE / 2);
    
    for (let i = 0; i < INITIAL_SNAKE_LENGTH; i++) {
        snake.push({ x: startX - i, y: startY });
    }
    
    // åˆå§‹åŒ–æ–¹å‘
    direction = 'RIGHT';
    nextDirection = 'RIGHT';
    
    // åˆå§‹åŒ–åˆ†æ•°
    score = 0;
    document.getElementById('current-score').textContent = score;
    
    // ç”Ÿæˆé£Ÿç‰©
    generateFood();
    
    // è®¾ç½®æ¸¸æˆçŠ¶æ€
    gameState = 'ready';
    updateOverlay();
}

// ========== é£Ÿç‰©ç”Ÿæˆå‡½æ•° ==========
function generateFood() {
    let validPosition = false;
    
    while (!validPosition) {
        food = {
            x: Math.floor(Math.random() * GRID_SIZE),
            y: Math.floor(Math.random() * GRID_SIZE)
        };
        
        // æ£€æŸ¥é£Ÿç‰©æ˜¯å¦ä¸è›‡èº«é‡å 
        validPosition = !snake.some(segment => 
            segment.x === food.x && segment.y === food.y
        );
    }
}

// ========== æ¸¸æˆä¸»å¾ªç¯ ==========
function gameLoop() {
    if (gameState !== 'playing') return;
    
    // æ›´æ–°æ–¹å‘
    direction = nextDirection;
    
    // è®¡ç®—è›‡å¤´æ–°ä½ç½®
    const head = { ...snake[0] };
    
    switch (direction) {
        case 'UP':    head.y--; break;
        case 'DOWN':  head.y++; break;
        case 'LEFT':  head.x--; break;
        case 'RIGHT': head.x++; break;
    }
    
    // æ£€æŸ¥ç¢°æ’
    if (checkCollision(head)) {
        gameOver();
        return;
    }
    
    // æ·»åŠ æ–°å¤´éƒ¨
    snake.unshift(head);
    
    // æ£€æŸ¥æ˜¯å¦åƒåˆ°é£Ÿç‰©
    if (head.x === food.x && head.y === food.y) {
        score += 10;
        document.getElementById('current-score').textContent = score;
        generateFood();
    } else {
        // æ²¡åƒåˆ°é£Ÿç‰©,ç§»é™¤å°¾éƒ¨
        snake.pop();
    }
    
    // ç»˜åˆ¶æ¸¸æˆç”»é¢
    draw();
}

// ========== ç¢°æ’æ£€æµ‹ ==========
function checkCollision(head) {
    // æ£€æŸ¥æ’å¢™
    if (head.x < 0 || head.x >= GRID_SIZE || 
        head.y < 0 || head.y >= GRID_SIZE) {
        return true;
    }
    
    // æ£€æŸ¥æ’è‡ªå·±
    for (let i = 0; i < snake.length; i++) {
        if (snake[i].x === head.x && snake[i].y === head.y) {
            return true;
        }
    }
    
    return false;
}

// ========== ç»˜åˆ¶å‡½æ•° ==========
function draw() {
    // æ¸…ç©ºç”»å¸ƒ
    ctx.fillStyle = '#1a1a2e';
    ctx.fillRect(0, 0, canvas.width, canvas.height);
    
    // ç»˜åˆ¶ç½‘æ ¼(å¯é€‰)
    drawGrid();
    
    // ç»˜åˆ¶é£Ÿç‰©
    ctx.fillStyle = '#ff0055';
    ctx.fillRect(
        food.x * CELL_SIZE,
        food.y * CELL_SIZE,
        CELL_SIZE - 2,
        CELL_SIZE - 2
    );
    
    // ç»˜åˆ¶è›‡
    snake.forEach((segment, index) => {
        if (index === 0) {
            // è›‡å¤´
            ctx.fillStyle = '#00cc33';
        } else {
            // è›‡èº«
            ctx.fillStyle = '#00ff41';
        }
        
        ctx.fillRect(
            segment.x * CELL_SIZE,
            segment.y * CELL_SIZE,
            CELL_SIZE - 2,
            CELL_SIZE - 2
        );
    });
}

// ========== ç»˜åˆ¶ç½‘æ ¼ ==========
function drawGrid() {
    ctx.strokeStyle = '#2a2a3e';
    ctx.lineWidth = 0.5;
    
    for (let i = 0; i <= GRID_SIZE; i++) {
        // å‚ç›´çº¿
        ctx.beginPath();
        ctx.moveTo(i * CELL_SIZE, 0);
        ctx.lineTo(i * CELL_SIZE, canvas.height);
        ctx.stroke();
        
        // æ°´å¹³çº¿
        ctx.beginPath();
        ctx.moveTo(0, i * CELL_SIZE);
        ctx.lineTo(canvas.width, i * CELL_SIZE);
        ctx.stroke();
    }
}

// ========== äº‹ä»¶ç›‘å¬å™¨è®¾ç½® ==========
function setupEventListeners() {
    // é”®ç›˜æ§åˆ¶
    document.addEventListener('keydown', handleKeyPress);
    
    // éš¾åº¦æŒ‰é’®
    document.querySelectorAll('.difficulty-btn').forEach(btn => {
        btn.addEventListener('click', () => {
            if (gameState === 'ready' || gameState === 'gameover') {
                setDifficulty(btn.dataset.difficulty);
            }
        });
    });
    
    // æ§åˆ¶æŒ‰é’®
    document.getElementById('start-btn').addEventListener('click', startGame);
    document.getElementById('pause-btn').addEventListener('click', togglePause);
    document.getElementById('restart-btn').addEventListener('click', restartGame);
}

// ========== æŒ‰é”®å¤„ç† ==========
function handleKeyPress(e) {
    // ç©ºæ ¼é”®æš‚åœ/ç»§ç»­
    if (e.code === 'Space') {
        e.preventDefault();
        if (gameState === 'ready') {
            startGame();
        } else if (gameState === 'playing') {
            togglePause();
        } else if (gameState === 'paused') {
            togglePause();
        }
        return;
    }
    
    // æ–¹å‘é”®æ§åˆ¶
    if (gameState !== 'playing') return;
    
    switch (e.key) {
        case 'ArrowUp':
        case 'w':
        case 'W':
            if (direction !== 'DOWN') nextDirection = 'UP';
            break;
        case 'ArrowDown':
        case 's':
        case 'S':
            if (direction !== 'UP') nextDirection = 'DOWN';
            break;
        case 'ArrowLeft':
        case 'a':
        case 'A':
            if (direction !== 'RIGHT') nextDirection = 'LEFT';
            break;
        case 'ArrowRight':
        case 'd':
        case 'D':
            if (direction !== 'LEFT') nextDirection = 'RIGHT';
            break;
    }
    
    e.preventDefault();
}

// ========== æ¸¸æˆæ§åˆ¶å‡½æ•° ==========
function startGame() {
    if (gameState === 'ready' || gameState === 'gameover') {
        if (gameState === 'gameover') {
            resetGame();
        }
        
        gameState = 'playing';
        updateOverlay();
        updateButtons();
        
        const speed = DIFFICULTY_SETTINGS[currentDifficulty].speed;
        gameInterval = setInterval(gameLoop, speed);
    }
}

function togglePause() {
    if (gameState === 'playing') {
        gameState = 'paused';
        clearInterval(gameInterval);
        updateOverlay();
        updateButtons();
    } else if (gameState === 'paused') {
        gameState = 'playing';
        updateOverlay();
        updateButtons();
        
        const speed = DIFFICULTY_SETTINGS[currentDifficulty].speed;
        gameInterval = setInterval(gameLoop, speed);
    }
}

function restartGame() {
    clearInterval(gameInterval);
    resetGame();
    draw();
    updateButtons();
}

function gameOver() {
    clearInterval(gameInterval);
    gameState = 'gameover';
    
    // æ›´æ–°æœ€é«˜åˆ†
    if (score > highScore) {
        highScore = score;
        localStorage.setItem('snakeHighScore', highScore);
        document.getElementById('high-score').textContent = highScore;
    }
    
    updateOverlay();
    updateButtons();
}

// ========== éš¾åº¦è®¾ç½® ==========
function setDifficulty(difficulty) {
    currentDifficulty = difficulty;
    
    // æ›´æ–°æŒ‰é’®æ ·å¼
    document.querySelectorAll('.difficulty-btn').forEach(btn => {
        btn.classList.remove('active');
        if (btn.dataset.difficulty === difficulty) {
            btn.classList.add('active');
        }
    });
}

// ========== UIæ›´æ–°å‡½æ•° ==========
function updateOverlay() {
    const overlay = document.getElementById('game-overlay');
    const title = document.getElementById('overlay-title');
    const message = document.getElementById('overlay-message');
    
    switch (gameState) {
        case 'ready':
            overlay.classList.remove('hidden');
            title.textContent = 'å‡†å¤‡å¼€å§‹';
            message.textContent = 'æŒ‰ç©ºæ ¼é”®æˆ–ç‚¹å‡»å¼€å§‹æŒ‰é’®';
            break;
        case 'playing':
            overlay.classList.add('hidden');
            break;
        case 'paused':
            overlay.classList.remove('hidden');
            title.textContent = 'æ¸¸æˆæš‚åœ';
            message.textContent = 'æŒ‰ç©ºæ ¼é”®ç»§ç»­';
            break;
        case 'gameover':
            overlay.classList.remove('hidden');
            title.textContent = 'æ¸¸æˆç»“æŸ';
            message.textContent = `å¾—åˆ†: ${score}  æœ€é«˜åˆ†: ${highScore}`;
            break;
    }
}

function updateButtons() {
    const startBtn = document.getElementById('start-btn');
    const pauseBtn = document.getElementById('pause-btn');
    
    switch (gameState) {
        case 'ready':
        case 'gameover':
            startBtn.disabled = false;
            pauseBtn.disabled = true;
            pauseBtn.textContent = 'æš‚åœ';
            break;
        case 'playing':
            startBtn.disabled = true;
            pauseBtn.disabled = false;
            pauseBtn.textContent = 'æš‚åœ';
            break;
        case 'paused':
            startBtn.disabled = true;
            pauseBtn.disabled = false;
            pauseBtn.textContent = 'ç»§ç»­';
            break;
    }
}

// ========== é¡µé¢åŠ è½½å®Œæˆååˆå§‹åŒ– ==========
window.addEventListener('DOMContentLoaded', init);
```

### JavaScriptå®ç°è¦ç‚¹

1. **æ¨¡å—åŒ–è®¾è®¡**: åŠŸèƒ½åˆ†ç¦»,æ˜“äºç»´æŠ¤
2. **çŠ¶æ€æœºç®¡ç†**: æ¸…æ™°çš„æ¸¸æˆçŠ¶æ€è½¬æ¢
3. **é˜²æ­¢åå‘ç§»åŠ¨**: nextDirectionæœºåˆ¶
4. **æœ¬åœ°å­˜å‚¨**: localStorageä¿å­˜æœ€é«˜åˆ†
5. **äº‹ä»¶å§”æ‰˜**: é«˜æ•ˆçš„äº‹ä»¶å¤„ç†
6. **è¾¹ç•Œæ£€æŸ¥**: ä¸¥æ ¼çš„ç¢°æ’æ£€æµ‹

